<h1>Edit Mountain</h1>

<form action="<%= mountain_update_path(@mountain.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value = "<%= @mountain.name %>" required>
  <label>Image:</label>
  <input type="url" name="image" value = "<%= @mountain.image %>">
  <label>Height</label>
  <input type="number" name="height" value = "<%= @mountain.height %>">
  <label>Location</label>
  <input type="text" name="location" value = "<%= @mountain.location %>">
  <button>Update mountain</button>
</form>
