<h1>New Mountain</h1>

<form action="<%= mountains_path %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" required>
  <label>Image:</label>
  <input type="url" name="image">
  <label>Height</label>
  <input type="number" name="height">
  <label>Location</label>
  <input type="text" name="location">
  <button>Create mountain</button>
</form>
