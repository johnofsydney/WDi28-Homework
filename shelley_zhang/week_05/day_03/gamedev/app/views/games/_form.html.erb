<%= form_for @game do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.label :developer_id %>
  <%= f.select :developer_id, Developer.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
<% end %>
