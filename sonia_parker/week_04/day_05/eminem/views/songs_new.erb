<h1 class="text-center">New Song</h1>
<div class="row">
  <div class="col-6 m-auto">


<form class="bg-dark text-white p-3"action="/songs" class="m-auto p-3"method="post">
  <div class="form-group">


  <label>Name</label>
  <input type="text" name="name" placeholder="Song Name" required autofocus>
  </div>
  <div class="form-group">
  <label>youtube Url (include 11-symbol combination after "v=")</label>
  <input type="text" name="youtube_url" required placeholder="wfWIs2gFTAM">
  </div>
  <div class="form-group">
  <label>Choose Album</label>
  <select  name="album_id">
    <option></option>
    <% Album.all.each do |album| %>
    <option value ="<%= album.id %>"><%= album.name %> </option>
    <% end %>
  </select>
  </div>
  <button class="btn btn-success">Create</button>
  </select>
</form>
</div>
</div>
