<%= form_for @animal do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :dob %>
  <%= f.text_field :dob %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :vaccinated %>
  <%= f.check_box :vaccinated %>

  <%= f.label :colour %>
  <%= f.text_field :colour %>

  <%= f.label :type_name, "Type" %>
  <%= f.text_field :type_name, :required => true %>

  <%= f.label :state %>
  <%= f.text_field :state, :required => true %>

  <%= f.label :sex %>
  <%= f.text_field :sex, :required => true %>

  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>

  <%= f.label :shelter_id %>
  <%= f.select :shelter_id, Shelter.pluck(:name, :id), :required => true %>

  <%= f.submit %>
<% end %>