<h1>Edit Mountain</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @mountain.name %>" required>
  <label>Category:</label>
  <input type="text" name="category" value="<%= @mountain.category %>">
  <label>Country:</label>
  <input type="text" name="country" value="<%= @mountain.country %>">
  <label>Height:</label>
  <input type="number" name="height" value="<%= @mountain.height %>">
  <button>Update mountain</button>
</form>
