<h1><%= @mountain.name %></h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Category</td>
      <td>Country</td>
      <td>Height</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @mountain.name %></td>
      <td><%= @mountain.category %></td>
      <td><%= @mountain.country %></td>
      <td><%= @mountain.height %></td>
    </tr>
  </tbody>
</table>
<div class="controls">
  <%= link_to 'Edit mountain', mountain_edit_path(@mountain.id) %>
  <%= button_to 'Delete mountain', mountain_path(@mountain.id), :method => 'delete'%>
</div>
